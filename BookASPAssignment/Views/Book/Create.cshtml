@{
    ViewData["Title"] = "Create";
}

<h1>Create a Book</h1>

@if (ViewBag.SuccessfulCreation != null)
{
    <p class="alert @((ViewBag.SuccessfulCreation ? "alert-success" : "alert-danger"))">@(ViewBag.Status)</p>
}


<section>
    <h2>Create a Person</h2>
    <form action="/Book/Create" method="get">
        <div>
            <label for="id">ID:</label>
            <input id="id" type="text" name="id" value="" />
        </div>
        <div>
            <label for="title">Title:</label>
            <input id="title" type="text" name="title" value="" />
        </div>
        <div>
            <label for="author">Author:</label>
            <input id="author" type="text" name="author" value="" />
        </div>
        <div>
            <label for="publicationDate">Publication Date:</label>
            <input type="date" id="publicationDate" name="publicationDate"
                   value="Date.Now()"
                   min="2020-01-01" max="2020-12-31">
        </div>
        <div>
            <label for="checkedOutDate">Checked Out Date:</label>
            <input type="date" id="checkedOutDate" name="checkedOutDate"
                   value="Date.Now()"
                   min="2020-01-01" max="2020-12-31">
        </div>
        <input type="submit" value="Submit" />
    </form>

</section>


